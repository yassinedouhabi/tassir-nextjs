{
  "editor.formatOnSave": true, // باش الكود يتنسق أوتوماتيكياً منين تسيفط
  "editor.tabSize": 2, // مسافة التاب 2 باش الكود يكون منظم
  "editor.detectIndentation": false, // ما يخليش VSCode يبدل حجم التاب حسب الملف
  "files.eol": "\n", // نهاية السطر بصيغة LF (مزيان مع Git)
  "javascript.updateImportsOnFileMove.enabled": "always", // يصحح import paths أوتوماتيكياً إذا حركت ملف
  "eslint.enable": true, // يشغل ESLint داخل VSCode
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true, // يسمح لـ ESLint ينقح الكود فالأوتوماتيك
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // يصلح المشاكل اللي يقدر ESLint يصلحها عند الحفظ
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact", // يمكن لك تستعمل إمتد في ملفات JS و JSX بسهولة
    "typescript": "typescriptreact" // كذلك مع TS و TSX
  },
  "editor.wordWrap": "on", // التفاف السطور باش مايدوزوش على شاشة صغيرة
  "editor.minimap.enabled": false, // كتعطل الخريطة الصغيرة على الجنب (اختياري)
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true // إخفاء مجلد node_modules من المستكشف
  },
  "terminal.integrated.shell.linux": "/bin/bash", // إذا كتستعمل لينكس باش يكون التيرمينال باشتغال مزيان
  "javascript.preferences.importModuleSpecifier": "relative", // المسارات فـ import تكون نسبية
  "editor.snippetSuggestions": "top" // عرض الاقتراحات ديال السنيبيتس أولاً
}
